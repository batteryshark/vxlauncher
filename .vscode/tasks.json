{
    "version": "2.0.0",
    "tasks": [
        // -- [COMMON TASKS] -- 
        {
            "label": "**Generate Build Path**",
            "type": "shell",
            "osx": {"command": "mkdir -p ./bin"},
            "linux": {"command": "mkdir -p ./bin"},
            "windows": {"command": "cmd /C if not exist bin mkdir bin"}
        },
        {
            "label": "**Clean Build Path**",
            "type": "shell",
            "osx": {"command": "rm -rf ./bin"},
            "linux": {"command": "rm -rf ./bin"},
            "windows": {"command": "cmd /C if exist bin rmdir /s /q bin"},            
            "group": {
                "kind": "build",
                "isDefault": true
            },            
        },
        {
            "label": "**Create Release [Windows]**",
            "type": "shell",
            "command": "python3 tools/rlsgen.py vxlauncher_windows vxlauncher.exe vxbootstrap32.exe vxbootstrap64.exe",
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },  
        {
            "label": "**Create Release [Linux]**",
            "type": "shell",
            "command": "python3 tools/rlsgen.py vxlauncher_linux vxlauncher.elf libsmoothie.so",
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },       
        {
            "label": "Build VXLauncher [Windows 64-bit]",
            "type": "shell",
            "dependsOn": ["**Generate Build Path**"],
            "command": [
                "x86_64-w64-mingw32-g++",
                "--std",
                "c++17",
                "-mwindows", 
                "${workspaceFolder}/src/vxlauncher.cpp",
                "-static",
                "-static-libstdc++",
                "-lgcc",
                "-o ${workspaceFolder}/bin/vxlauncher.exe"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build VXLauncher [Linux 64-bit]",
            "type": "shell",
            "dependsOn": ["**Generate Build Path**"],            
            "command": [
                "g++",
                "--std",
                "c++17",  
                "-mwindows",                     
                "${workspaceFolder}/src/vxlauncher.cpp",
                "-static-libstdc++",
				"-ldl",
                "-o ${workspaceFolder}/bin/vxlauncher.elf"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
    {
        "label": "Build VXBootstrap [Windows 64-bit]",
        "dependsOn": ["**Generate Build Path**"],
        "type": "shell",
        "command": [
            "x86_64-w64-mingw32-gcc",
            "-fshort-wchar",
            "-mwindows", 
            "${workspaceFolder}/src/vxbootstrap.cpp",
            "-static",
            "-static-libgcc",
            "-lstdc++",
            "-o ${workspaceFolder}/bin/VXBootstrap64.exe"
        ],
        "presentation": {
            "reveal": "always",
            "panel": "shared"
        },
        "group": {
            "kind": "build",
            "isDefault": true
        }
    },
    {
        "label": "Build VXBootstrap [Windows 32-bit]",
        "dependsOn": ["**Generate Build Path**"],
        "type": "shell",
        "command": [
            "i686-w64-mingw32-gcc",
            "-fshort-wchar",
            "-mwindows", 
            "${workspaceFolder}/src/vxbootstrap.cpp",
            "-static",
            "-static-libgcc",
            "-lstdc++",
            "-o ${workspaceFolder}/bin/VXBootstrap32.exe"
        ],
        "presentation": {
            "reveal": "always",
            "panel": "shared"
        },
        "group": {
            "kind": "build",
            "isDefault": true
        }
    },        
    ]
}